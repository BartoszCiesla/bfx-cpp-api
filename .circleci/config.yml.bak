version: 2
jobs:
  build:
    docker:
      - image: mmquant/bfx-cpp-api-circleci-alpine:0.0.1
    steps:
      
      - restore_cache:
          keys:
            - source-{{ .Branch }}-{{ .Revision }}
            - source-{{ .Branch }}-
      
      - checkout
      
      - save_cache:
          key: source-{{ .Branch }}-{{ .Revision }}
          paths:
            - ".git"

      - run:
          name: Build project
          command: |
            mkdir build && cd build && cmake .. && make

